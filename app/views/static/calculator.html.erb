<div class="relative bg-gradient-to-r from-sky-600 to-sky-700 mix-blend-multiply overflow-hidden">
  <div class="hidden sm:block sm:absolute sm:inset-0" aria-hidden="true">
    <svg class="absolute bottom-0 right-0 transform translate-x-1/2 mb-48 text-sky-600 lg:top-0 lg:mt-28 lg:mb-0 xl:transform-none xl:translate-x-0" width="364" height="384" viewBox="0 0 364 384" fill="none">
      <defs>
        <pattern id="eab71dd9-9d7a-47bd-8044-256344ee00d0" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <rect x="0" y="0" width="4" height="4" fill="currentColor" />
        </pattern>
      </defs>
      <rect width="364" height="384" fill="url(#eab71dd9-9d7a-47bd-8044-256344ee00d0)" />
    </svg>
  </div>
  <div class="relative pt-6 pb-16 sm:pb-24">

    <main class="mt-16 sm:mt-24">
      <div class="mx-auto max-w-7xl">
        <div class="lg:grid lg:grid-cols-12 lg:gap-8">
          <div class="px-4 sm:px-6 sm:text-center md:max-w-2xl md:mx-auto lg:col-span-6 lg:text-left lg:flex lg:items-center">
            <div>
              <h1 class="text-4xl tracking-tight font-extrabold text-white sm:leading-none lg:text-5xl xl:text-6xl">
                <span class="md:block">Beregn prisen på</span>
                <span class="text-sky-200 md:block">din varmepumpe</span>
              </h1>
              <p class="mt-3 text-base text-sky-100 sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
                Anim aute id magna aliqua ad ad non deserunt sunt. Qui irure qui lorem cupidatat commodo. Elit sunt amet fugiat veniam occaecat fugiat aliqua ad ad non deserunt sunt.
              </p>
              <div class="inline-flex items-center divide-x divide-gray-300 mt-8">
                <div class="flex-shrink-0 flex pr-5">
                  <% 5.times do %>
                    <%= render_svg "icons/star-solid", 
                                    styles: "h-5 w-5 text-yellow-400" %>
                  <% end %>
                </div>
                <div class="min-w-0 flex-1 pl-5 py-1 text-sm text-white sm:py-3"><span class="font-medium text-sky-100">Anmeldt 5 stjerner</span> af over <span class="font-medium text-white">500 kunder</span></div>
              </div>
            </div>
          </div>
          <div class="mt-16 sm:mt-24 lg:mt-0 lg:col-span-6">
            <div class="bg-white sm:max-w-md sm:w-full sm:mx-auto sm:rounded-lg sm:overflow-hidden">
              <!-- This example requires Tailwind CSS v2.0+ -->
              <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-10">
                <h3 class="text-lg leading-6 font-medium text-sky-900">
                  Varmepumpe prisberegner
                </h3>
              </div>

              <div class="px-4 py-8 sm:px-10">
                <div>
                  <form action="#" method="POST" class="space-y-6">
                    <div>
                      <label for="name" class="sr-only">Indtast din adresse</label>
                      <input type="text" name="name" id="name" autocomplete="name" placeholder="Indtast din adresse" required class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border-gray-300 rounded-md">
                    </div>

                    <div>
                      <label for="mobile-or-email" class="sr-only">Hvilket år er dit hus bygget/renoveret?</label>
                      <input type="number" name="mobile-or-email" id="mobile-or-email" autocomplete="email" placeholder="Hvilket år er dit hus bygget/renoveret?" required class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border-gray-300 rounded-md">
                    </div>

                    <div>
                      <label for="password" class="sr-only">Hvor mange m2 er dit hus?</label>
                      <input id="password" name="password" type="number" placeholder="Hvor mange m2 er dit hus?" autocomplete="current-password" required class="block w-full shadow-sm focus:ring-sky-500 focus:border-sky-500 sm:text-sm border-gray-300 rounded-md">
                    </div>

                    <div class="max-w-xl w-full -mx-auto">
                          
                      <div class="flex items-center justify-between" x-data="{ on: false }">
                        <span class="flex-grow flex flex-col" id="availability-label">
                          <span class="text-sm font-medium text-gray-900">Har du eller ønsker du gulvvarme/radiatorer?</span>
                          <span class="text-sm text-gray-500">Dit svar afgør, om du skal have en luft-til-luft eller luft-til-vand varmepumpe.</span>
                        </span>
                        <button type="button" class="relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 bg-gray-200" role="switch" aria-checked="false" x-ref="switch" x-state:on="Enabled" x-state:off="Not Enabled" :class="{ 'bg-sky-600': on, 'bg-gray-200': !(on) }" aria-labelledby="availability-label" :aria-checked="on.toString()" @click="on = !on">
                          <span class="sr-only">Use setting</span>
                          <span aria-hidden="true" class="pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200 translate-x-0" x-state:on="Enabled" x-state:off="Not Enabled" :class="{ 'translate-x-5': on, 'translate-x-0': !(on) }"></span>
                        </button>
                      </div>

                        </div>

                    <div>
                      <button type="submit" class="btn btn-xl btn-red-gradient w-full flex justify-center">
                        Beregn din pris
                      </button>
                    </div>
                  </form>
                </div>
              </div>
              <div class="px-4 py-6 bg-gray-50 border-t-2 border-gray-200 sm:px-10">
                <p class="text-xs leading-5 text-gray-500">Prisberegneren er <span class="font-medium text-gray-600">gratis og uforpligtende</span></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

