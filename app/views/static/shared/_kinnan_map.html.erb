<!-- This example requires Tailwind CSS v2.0+ -->
<div class="py-16 lg:py-24">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative py-24 px-8 bg-sky-600 rounded-xl shadow-2xl overflow-hidden lg:px-16 lg:grid lg:grid-cols-2 lg:gap-x-8">
      <div class="absolute inset-0 opacity-50 filter saturate-0 mix-blend-multiply">
        <%= image_tag "kinnan-map.jpg",
                      class: "w-full h-full object-cover",
                      alt: "Kort over Kinnans forhandlere" %>
      </div>
      <div class="relative lg:col-span-1">
        <%= image_tag "logo/external/kinnan-dark.png",
                      class: "h-12 w-auto",
                      alt: "Kinnan logo" %>
        <blockquote class="mt-6 text-white">
          <p class="text-xl font-medium sm:text-2xl">Varmeo har i samarbejde med Kinnan et landsdækkende netværk af flere hundrede autoriserede installatører.</p>
          <footer class="mt-6">
            <%= link_to "Se forhandlerkort",
                        "https://www.kinnan.dk/mitsubishi-electric-luft-til-luft-forhandler/",
                        target: "_blank",
                        class: "btn btn-lg bg-sky-500 bg-opacity-60 hover:bg-opacity-70 sm:px-8" %>
          </footer>
        </blockquote>
      </div>
    </div>
  </div>
</div>
